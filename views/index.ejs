<% include ./partials/header%>

<div class="ui main text container">
    <h1>REST blog App</h1>
<div class="ui top attached segment">
    <div class="ui divided items">
        <% blogs.map((el)=>{ %>
            <div class="item">
                <div class="image">
                    <image src="<%= el.image%>"></image>
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= el.id%>"><h2><%= el.title%></h2></a>
                    <div class="meta">
                        <span><%= el.created.toDateString()%></span>
                    </div>
                    <div class="description">
                        <p><%- el.body.substring(0,100)%>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated blue button" href="/blogs/<%= el.id%>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</div>


<% include ./partials/footer%>

