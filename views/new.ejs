<% include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Post title: </label>
            <input type="text" name="title" placeholder="title">
        </div>
        <div class="field">
            <label>Image Url: </label>
            <input type="text" name="image" placeholder="image link">
        </div>
        <div class="field">
            <label>Post: </label>
            <textarea type="text" name="body" placeholder="post description..."></textarea>
        </div>
        <input class="ui black big basic button" type="submit" value="Add new post">
    </form>
</div>

