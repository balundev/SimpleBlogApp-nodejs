<% include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image %>" height="300px">
        </div>
        <div class="content">
            <span><%= post.created.toDateString()%></span>
        </div>
        <div class="description">
            <p><%- post.body%></p>
        </div>
    </div>
    <div class="edit_post">
        <a href="/blogs/<%= post.id%>/edit"><button class="ui blue basic button">Edit</button></a>
        <form action="/blogs/<%= post.id%>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete</button>
        </form>
    </div>
</div>

<% include ./partials/footer%>